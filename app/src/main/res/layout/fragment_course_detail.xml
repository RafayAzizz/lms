<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.CourseDetailFragment">
    <androidx.cardview.widget.CardView

        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gcuh"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Course Detail"
            android:textSize="25dp"/>

    </androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_marginTop="5dp"
    android:layout_below="@id/heading"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Cource Title:"
        android:textColor="@color/gcuh"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"
        android:textSize="17dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="10dp"
        android:text="course tilte"

        />

</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/card"
        android:layout_marginTop="13dp">

        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Tutor:"
            android:textColor="@color/gcuh"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tutor"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:text="Tutor"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:textColor="@color/gcuh"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Total Lectures:">
        </TextView>
        <TextView
            android:id="@+id/lecturesNo"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:text="Total Lectures"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:textColor="@color/gcuh"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Quizzes:">
        </TextView>
        <TextView
            android:id="@+id/QuizNo"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:text="quizzes"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/card4"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:textColor="@color/gcuh"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Assingments:">
        </TextView>
        <TextView
            android:id="@+id/totalTask"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:text="assingments"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:id="@+id/card5"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:textColor="@color/gcuh"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Description:">
        </TextView>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="description">
        </TextView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>