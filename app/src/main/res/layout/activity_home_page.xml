<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:openDrawer="start"
    android:id="@+id/drawer"
    android:orientation="vertical"
    android:background="#f1f2f6"
    tools:context=".HomePage">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f2f6">
    <LinearLayout
        android:id="@+id/name_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttom_radius"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon"
            android:layout_margin="7dp"/>
        <TextView
            android:id="@+id/Hiname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Hasnain"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="25dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn without Limits"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:fontFamily="@font/ubuntu_regular"
            android:background="@drawable/radius_border"
            android:padding="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="25dp"
            android:drawableLeft="@drawable/baseline_search_24" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/course_heading"
        android:layout_below="@+id/name_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="32dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="18dp"
            android:textColor="#93113b"
            android:text="Categories"/>

        <TextView
            android:id="@+id/viewcourses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="12dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="10dp"
            android:text="View All"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/course_items"
        android:layout_below="@+id/course_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:background="#f1f2f6"
        android:layout_marginRight="32dp"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:outlineSpotShadowColor="#f1f2f6"
            >

            <LinearLayout
                android:id="@+id/gd"
                android:layout_width="144dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="90dp"
                    android:background="@drawable/c_radius"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/graphic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/graphicdesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Graphic Design"
                    android:textSize="10dp"
                    android:textColor="#93113b" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:outlineSpotShadowColor="#f1f2f6"
            android:layout_alignParentEnd="true"
            >

            <LinearLayout
                android:layout_width="144dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/web"
                    android:layout_width="125dp"
                    android:layout_height="90dp"
                    android:background="@drawable/c_radius"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/web" />
                </LinearLayout>

                <TextView
                    android:id="@+id/webdevelopment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Web Development"
                    android:textSize="10dp"
                    android:textColor="#93113b" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/task_quiz_items"
        android:layout_below="@+id/course_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:background="#f1f2f6"
        android:layout_marginRight="32dp"
        >

        <TextView
            android:id="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_alignParentTop="true"
            android:text="Task"
            android:textColor="#93113b"
            android:layout_marginBottom="10dp"
            android:textSize="18dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/task_items"
            android:layout_below="@+id/task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:outlineSpotShadowColor="#f1f2f6"
            >

            <LinearLayout
                android:id="@+id/Task"
                android:layout_width="144dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="90dp"
                    android:background="@drawable/c_radius"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/task" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Task"
                    android:textSize="12dp"
                    android:textColor="#93113b" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/quiz_items"
            android:text="Quiz"
            android:textColor="#93113b"
            android:layout_marginBottom="10dp"
            android:textSize="18dp" />




        <androidx.cardview.widget.CardView
            android:id="@+id/quiz_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz"
            app:cardCornerRadius="12dp"
            android:outlineSpotShadowColor="#f1f2f6"
            android:layout_alignParentEnd="true"
            >

            <LinearLayout
                android:id="@+id/Quiz"
                android:layout_width="144dp"
                android:layout_height="130dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="90dp"
                    android:background="@drawable/c_radius"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/quiz" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Quiz"
                    android:textSize="12dp"
                    android:textColor="#93113b" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mentor_heading"
        android:layout_below="@+id/task_quiz_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="32dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="18dp"
            android:textColor="#93113b"
            android:text="Our Mentors"/>

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textAlignment="textEnd"-->
<!--            android:textSize="12dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:fontFamily="@font/ubuntu_regular"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:text="View All"/>-->
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mentors"
        android:layout_below="@id/mentor_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="32dp">
        <RelativeLayout
            android:id="@+id/mentor1_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/mentor1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="4dp"
                    android:outlineSpotShadowColor="#f1f2f6">

                    <!-- Your CardView content, e.g., ImageView -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/sirsohail" />

                </androidx.cardview.widget.CardView>

                <!-- Border for the CardView -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mentor_border"
                    android:padding="2dp"
                    />



            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mentor1"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Sir Sohail Shah"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/mentor2_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <FrameLayout
                android:id="@+id/mentor2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp"
                    android:outlineSpotShadowColor="#f1f2f6">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/sirsalman" />

                </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mentor_border"
                    android:padding="2dp"
                    />


            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Sir Salman Qazi"
                android:layout_below="@id/mentor2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/mentor3_Container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <FrameLayout
                android:id="@+id/mentor3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="16dp"
                    android:outlineSpotShadowColor="#f1f2f6">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/sirzeeshan" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mentor_border"
                    android:padding="2dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Sir Zeeshan Mughal"
                android:layout_below="@+id/mentor3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>




    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/uper_radius"
        android:layout_alignParentBottom="true"
        android:paddingRight="32dp"
        android:paddingLeft="32dp"
        android:paddingTop="5dp"
        >

        <RelativeLayout
            android:id="@+id/our_site"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:layout_marginStart="10dp"
            android:paddingBottom="7dp">

            <ImageView
                android:id="@+id/image_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/site"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_below="@+id/image_site"
                android:layout_centerHorizontal="true"
                android:textColor="#93113b"
                android:text="Our Site"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/my_course"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="7dp">

                <ImageView
                    android:id="@+id/course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/my_course" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/course"
                    android:layout_centerHorizontal="true"
                    android:text="my course"
                    android:textSize="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_favourite"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@+id/my_course"
                android:paddingTop="5dp"
                android:paddingBottom="7dp">

                <ImageView
                    android:id="@+id/favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/group" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/favourite"
                    android:layout_centerHorizontal="true"
                    android:text="Our team"
                    android:textSize="8dp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_profile"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="7dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            >

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile"
                android:layout_centerHorizontal="true"
                android:textSize="8dp"
                android:text="Profile"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="200dp"
        android:id="@+id/navigation"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation"
        android:background="#f1f2f6">
    </com.google.android.material.navigation.NavigationView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framelayout1"
        />
</androidx.drawerlayout.widget.DrawerLayout>
