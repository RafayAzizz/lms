<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".OurTeam">

            <androidx.cardview.widget.CardView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/gcuh"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="Department of Computer Science"
                    android:textSize="20dp"/>

            </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:layout_centerHorizontal="true"

        android:id="@+id/hasnain"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/hasnain">
    </ImageView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hasnain"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Hasnain Ahmed"
                android:textColor="@color/gcuh"
                android:textSize="18dp"></TextView>
    <TextView
        android:id="@+id/kaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI/UX Designer"
        android:textSize="16dp"
        android:textColor="@color/gcuh"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_below="@id/name"
        android:layout_centerInParent="true">
    </TextView>
    <ImageView
        android:layout_below="@id/kaam"
        android:layout_centerHorizontal="true"
        android:id="@+id/rafay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/rafay">
    </ImageView>

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rafay"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Abdul Rafay"
                android:textColor="@color/gcuh"
                android:textSize="18dp"></TextView>
    <TextView
        android:id="@+id/kaam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frontend Developer"
        android:textSize="16dp"
        android:textColor="@color/gcuh"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_below="@id/name1"
        android:layout_centerInParent="true">
    </TextView>
    <ImageView
        android:layout_below="@id/kaam1"
        android:layout_centerHorizontal="true"
        android:id="@+id/siddique"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/siddique">
    </ImageView>

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/siddique"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Muhammad Siddique"
                android:textColor="@color/gcuh"
                android:textSize="18dp"></TextView>
    <TextView
        android:id="@+id/kaam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backend Developer"
        android:textSize="16dp"
        android:textColor="@color/gcuh"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_below="@id/name2"
        android:layout_centerInParent="true">
    </TextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

